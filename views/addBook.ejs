<html>
    <head>
        <title>Nouveau livre</title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>
    <body>
    <%- include('./header') %>
        <main class="mainAddBook">
            <h1>Ajouter un nouveau livre</h1>
            <form action="/addBook" method="post" class="formContainer">
                <div class="inputContainerFormAddBook">
                    <label for="isbn">ISBN :</label>
                    <input type="number" id="isbn" name="isbn">
                </div>
                <div class="inputContainerFormAddBook">
                    <label for="name">Name :</label>
                    <input type="text" id="name" name="name">
                </div>
                <div class="inputContainerFormAddBook">
                    <label for="author">Auteur :</label>
                    <input type="text" id="author" name="author">
                </div>
                <div class="inputContainerFormAddBook">
                    <label for="description">Description :</label>
                    <input type="text" id="description" name="description">
                </div>
                <div class="inputContainerFormAddBook">
                    <label for="genre">Genre :</label>
                    <select id="genre" name="genre" >
                        <option value="Aucun">Choisir un genre</option>
                        <option value="Romance">Romance</option>
                        <option value="Développement personnel">Développement personnel</option>
                        <option value="Enfant">Enfant</option>
                        <option value="Thriller">Thriller</option>
                        <option value="Science-fiction">Science-fiction</option>
                        <option value="Fantasy">Fantasy</option>
                    </select>
                </div>
                <div class="inputContainerFormAddBook">
                    <label for="price">Price :</label>
                    <input type="number" id="price" name="price" min="1" max="100">
                </div>
                <button type="submit">Envoyer</button>
            </form>
        </main>
    </body>
</html>




