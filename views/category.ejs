<html>
    <head>
        <title><%= category %></title>
        <link rel="stylesheet" type="text/css" href="/css/style.css">
    </head>
    <body>
        <%- include('./header') %>
        <h1>Catégorie sélectionnée: <%= category %></h1>
        <% if (books.length > 0) { %>
            <% books.forEach((book) => { %>
                <h2><%= book.name %></h2>
                <p>Author: <%= book.author %></p>
                <p>Description: <%= book.description %></p>
                <p>Genre: <%= book.genre %></p>
                <p>Price: <%= book.price %></p>
                <p>ESBN: <%= book.esbn %></p>
                <a href='/book/<%= book._id %>'>Voir le livre</a>
            <% }) %>
        <% } else { %>
            <h2>Désolé, il n'y aucun livre dans cette catégorie.</h2>
        <% } %>
    </body>
</html>